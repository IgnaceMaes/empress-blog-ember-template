<EsButton
  class="sidebar-toggle"
  aria-label="Toggle Sidebar"
  {{on "click" this.toggle}}
>
  {{svg-jar "sidebar" aria-hidden="true"}}
</EsButton>
<nav class="sidebar" aria-expanded="{{this.isOpen}}" ...attributes>
  <EsButton
    @secondary={{true}}
    class="sidebar-close"
    aria-label="Close Sidebar"
    {{on "click" this.close}}
  >
    X
  </EsButton>
  <div class="sidebar-content">
    {{yield}}
  </div>
</nav>