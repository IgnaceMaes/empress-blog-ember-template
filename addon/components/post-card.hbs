<article ...attributes>
  <h2 class="text-xl">{{@post.title}}</h2>
  <div class="text-muted mt-0 mb-3">
    <time>{{moment-format @post.date 'MMM Do, YYYY'}}</time> &ndash;
    <AuthorList @post={{@post}} />
  </div>

  <p>
    {{#if @post.excerpt}}
      {{markdown-to-html @post.excerpt}}
    {{else}}
      {{excerpt @post.html words="40"}}...
    {{/if}}
  </p>

  <LinkTo @route="post" @model={{@post.id}} class="es-button-secondary mt-3">
    Read on...
  </LinkTo>
</article>

<hr class="my-4">