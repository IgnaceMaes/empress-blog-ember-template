<nav class="site-nav">
    <div class="site-nav-left">
        {{#unless (eq router.currentRouteName 'index')}}
            {{#if blog.logo}}
                {{#link-to 'index' class="site-nav-logo"}}<img src="{{url blog.logo}}" alt="{{blog.title}}" />{{/link-to}}
            {{else}}
                {{#link-to 'index' class="site-nav-logo"}}{{blog.title}}{{/link-to}}
            {{/if}}
        {{/unless}}
        {{#if blog.navigation}}
            {{site-navigation}}
        {{/if}}
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            {{#if blog.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url blog.facebook}}" target="_blank" rel="noopener">{{svg-icons/facebook}}</a>
            {{/if}}
            {{#if blog.twitter}}
                <a class="social-link social-link-tw" href="https://twitter.com/{{blog.twitter}}" target="_blank" rel="noopener">{{svg-icons/twitter}}</a>
            {{/if}}
        </div>
        {{#if labs.subscribers}}
            <a class="subscribe-button" href="#subscribe">Subscribe</a>
        {{else}}
            {{!-- <a class="rss-button" href="http://cloud.feedly.com/#subscription/feed/{{blog.url}}/rss/" target="_blank" rel="noopener">{{svg-icons/rss}}</a> --}}
        {{/if}}
    </div>
</nav>
