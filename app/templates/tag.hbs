<header class="page-head">
    <h1 class="page-head-title mb-1">{{@model.name}}</h1>
    <p class="page-head-description mb-5">
        {{#if @model.description}}
            {{@model.description}}
        {{else}}
            A collection of {{plural @model.posts.length empty='posts' singular='% post' plural='% posts'}}
        {{/if}}
    </p>
</header>

<div class="post-feed">
  <LoadPosts @model={{@model}} as |posts|>
    {{#each posts as |post|}}
      {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
      <PostCard @post={{post}} />
    {{/each}}
  </LoadPosts>
</div>