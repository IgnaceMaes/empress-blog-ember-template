{{#each (sort-by 'date:desc' @model) as |post index|}}
  <PostCard @post={{post}} @index={{index}}/>
{{/each}}

<div class="grid sm:grid-2 lg:grid-2">
  <div>
    {{#if this.model.links.prev}}
      <LinkTo @route="index" @query={{hash page=this.model.links.prev}}>
        &ShortLeftArrow; Newer articles
      </LinkTo>
    {{/if}}
  </div>

  <div class="text-right">
    {{#if this.model.links.next}}
      <LinkTo @route="index" @query={{hash page=this.model.links.next}}>
        Older articles &ShortRightArrow;
      </LinkTo>
    {{/if}}
  </div>
</div>