{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{unless (and blog.cover blog.coverImage) 'no-cover'}}" style="{{if blog.coverImage coverImageStyle}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if blog.logo}}
                    <img class="site-logo" src="{{url blog.logo}}" alt="{{blog.title}}" />
                {{else}}
                    {{blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{blog.description}}</h2>
        </div>

        {{site-nav}}

        {{#if blog.coverMeta.attributionLink}}
          <div class="site-nav cover-attribution" style="flex-direction: row-reverse;">
            <a href="{{blog.coverMeta.attributionLink}}" target="_blank" rel="noopener noreferrer nofollow">
              <span>
                <svg xmlns="http://www.w3.org/2000/svg" style="height:12px;width:auto;position:relative;vertical-align:middle;top:-1px;fill:white;" viewBox="0 0 32 32">
                  <title>unsplash-logo</title>
                  <path d="M20.8 18.1c0 2.7-2.2 4.8-4.8 4.8s-4.8-2.1-4.8-4.8c0-2.7 2.2-4.8 4.8-4.8 2.7.1 4.8 2.2 4.8 4.8zm11.2-7.4v14.9c0 2.3-1.9 4.3-4.3 4.3h-23.4c-2.4 0-4.3-1.9-4.3-4.3v-15c0-2.3 1.9-4.3 4.3-4.3h3.7l.8-2.3c.4-1.1 1.7-2 2.9-2h8.6c1.2 0 2.5.9 2.9 2l.8 2.4h3.7c2.4 0 4.3 1.9 4.3 4.3zm-8.6 7.5c0-4.1-3.3-7.5-7.5-7.5-4.1 0-7.5 3.4-7.5 7.5s3.3 7.5 7.5 7.5c4.2-.1 7.5-3.4 7.5-7.5z"></path>
                </svg>
              </span>
              {{#if blog.coverMeta.attribution}}
                <span>{{blog.coverMeta.attribution}}</span>
              {{/if}}
            </a>
          </div>
        {{/if}}
    </div>

</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <div class="post-feed">
            {{#each (sort-by 'date:desc' model) as |post|}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{post-card post=post}}

            {{/each}}
        </div>

    </div>
</main>
